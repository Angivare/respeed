RewriteEngine On

RewriteRule ^([0-9]+)$ /index.php?forum=$1 [L]
RewriteRule ^([0-9]+)-([a-z0-9-]+)$ /index.php?forum=$1&slug=$2 [L]
RewriteRule ^([0-9]+)-([a-z0-9-]+)/([0-9]+)$ /index.php?forum=$1&slug=$2&page=$3 [L]

RewriteRule ^([0-9]+)/([0-9]+)-([a-z0-9-]+)$ /index.php?forum=$1&topic=$2&slug=$3 [L]
RewriteRule ^([0-9]+)/([0-9]+)-([a-z0-9-]+)/([0-9]+)$ /index.php?forum=$1&topic=$2&slug=$3&page=$4 [L]

RewriteRule ^se_connecter$ /index.php?login [L]
RewriteRule ^se_deconnecter$ /index.php?logout [L]

RewriteRule ^mp$ /index.php?mp [L]
RewriteRule ^mp/([0-9]+)$ /index.php?mp=$1 [L]
RewriteRule ^mp/([0-9]+)/([0-9]+)$ /index.php?mp=$1&id=$2 [L]

RewriteRule ^style-([0-9]+)\.css$ /style.css [L]
